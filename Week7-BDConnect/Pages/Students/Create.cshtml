@page
@model Week7_BDConnect.Pages.Students.IndexModel
@{
}

<h1> :::: Create New Student Record ::::</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label> Student ID </label>
                <input asp-for="StudentRecord.StudentID" class="form-control" />
            </div>
            <div class="form-group">
                <label> Student Name </label>
                <input asp-for="StudentRecord.StudentName" class="form-control" />
            </div>
            <div class="form-group">
                <label> Student Last Name </label>
                <input asp-for="StudentRecord.StudentLName" class="form-control" />
            </div>
            <div class="form-group">
                <label> Student Course </label>
                <input asp-for="StudentRecord.StudentCourse" class="form-control" />
            </div>
            <div class="form-group">
                <label> Student Status </label>
                <input asp-for="StudentRecord.StudentStatus" class="form-control" />
            </div>
            <div class="form-group">
                <label> Student Year </label>
                <input asp-for="StudentRecord.StudentYear" class="form-control" />
            </div>

            <div class="form-group">
                <label> Student Level </label>
                <input asp-for="StudentRecord.StudentLevel" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>